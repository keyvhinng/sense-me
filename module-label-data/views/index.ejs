<!DOCTYPE html>
<html>
	<head>
		<title>Etiquetado de polaridad de tweets</title>
		<meta charset="utf-8">
		<link rel="stylesheet" href="/css/bootstrap.min.css">
		<link rel="stylesheet" href="/css/main.css">
		<script src="/js/jquery-2.1.4.min.js"></script>
		<script src="/js/bootstrap.min.js"></script>
		<script src="/js/home.js"></script>
	</head>
	<body>
		<div class='container'>	
			<h2>Etiquetado de opiniones</h2>
			<table class="table">
				<tr>
					<th>Id</td>
					<th>Tweet</th>
					<th></th>
					<th></th>
					<th></th>
				</tr>
				<% data.forEach(function(row) { %>
					<tr>
						<td> <%= row.id %> </td>
						<td> <%= row.status %> </td>
						<td> <button type='button'> Negativo </button> </td>
						<td> <button type='button'> Neutro </button> </td>
						<td> <button type='button'> Positivo </button> </td>
					</tr>
				<% }); %>
			</table>
			<button type='button' id='btnSave'> Guardar </button>
			<button type='button' id='btnReload'> Etiquetar nuevos tweets </button>
		</div>
	</body>
</html>